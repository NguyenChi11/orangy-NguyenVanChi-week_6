{% comment %} {{ 'section-contact-form.css' | asset_url | stylesheet_tag }} {% endcomment %}
{{ 'style.css' | asset_url | stylesheet_tag }}
<script src="{{ 'orangy-contact-form.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient" style="background-color: {{ section.settings.background_color }}; ">
  <div class=" page-width form page-width--narrow section-{{ section.id }}-padding">
    <div class="form__title">
        {%- if section.settings.heading != blank -%}
          <h2 class="title title-wrapper--no-top-margin inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.heading }}
          </h2>
        {%- else -%}
          <h2 class="visually-hidden">{{ 'templates.contact.form.title' | t }}</h2>
        {%- endif -%}
    </div>
    {%- liquid
      assign contact_form_class = 'isolate'
      if settings.animations_reveal_on_scroll
        assign contact_form_class = 'isolate scroll-trigger animate--slide-in'
      endif
    -%}
    <div class="form__wrapper">
    {%- form 'contact', id: 'ContactForm', class: contact_form_class , class: form__wrapper -%} 
      {% comment %} {%- if form.posted_successfully? -%}
        <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
          {{- 'icon-success.svg' | inline_asset_content -}}
          {{ 'templates.contact.form.post_success' | t }}
        </h2>
      {%- elsif form.errors -%}
        <div class="form__message">
          <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
            {{- 'icon-error.svg' | inline_asset_content -}}
            {{ 'templates.contact.form.error_heading' | t }}
          </h2>
        </div>
        <ul class="form-status-list caption-large" role="list">
          <li>
            <a href="#ContactForm-email" class="link">
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}
            </a>
          </li>
        </ul>
      {%- endif -%} {% endcomment %}
      
      <div class=" form__wrapper__input"> {% comment %}contact__fields{% endcomment %}
        <div class="input__name ">
            <label for="fullname" class="form-label">Name *</label>
          <input
            class="input-form" {% comment %}field__input__contact{% endcomment %}
            autocomplete="name"
            type="text"
            class="input-form"
            id=" fullname" {% comment %}ContactForm-name{% endcomment %}
            name="contact[{{ 'templates.contact.form.name' | t }}]"
            value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
            placeholder="Name"
          >
            <span class="form-message"></span>
        </div>
        <div class=" input__email ">
            <label for="email" class="form-label">Email *</label>
          <input
            autocomplete="email"
            type="email"
            id=" email"{% comment %}ContactForm-email{% endcomment %}
            class="input-form"
            name="contact[email]"
            spellcheck="false"
            autocapitalize="off"
            value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
            aria-required="true"
            {% if form.errors contains 'email' %}
              aria-invalid="true"
              aria-describedby="ContactForm-email-error"
            {% endif %}
            placeholder="{{ 'templates.contact.form.email' | t }}"
          >
            <span class="form-message"></span>
          {%- if form.errors contains 'email' -%}
            <small class="contact__field-error" id="ContactForm-email-error">
              <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
              <span class="form__message">
                <span class="svg-wrapper">
                  {{- 'icon-error.svg' | inline_asset_content -}}
                </span>
                {{- form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email -}}
              </span>
            </small>
          {%- endif -%}
        </div>
        <div class="input__phone ">
            <label for="phone" class="form-label">Phone *</label>
          <input
            type="tel"
            id="phone"
            class="input__phone"
            autocomplete="tel"
            name="contact[{{ 'templates.contact.form.phone' | t }}]"
            pattern="[0-9\-]*"
            value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
            placeholder="Phone"
          >
            <span class="form-message"></span>
        </div>
        <div class="input__address ">
            <label for="phone" class="form-label">Address</label>
          <input
            type="text"
            id="address"
            class="input__address"
            autocomplete="address-line1"
            value="{% if form.address %}{{ form.address }}{% elsif customer %}{{ customer.address }}{% endif %}"
            placeholder="Address"
          >
        </div>
        <span class="form-message"></span>
      </div >
        <div class="form__wrapper__message">
            <label>Your message</label>
          <textarea
            rows="10"
            id="textarea"
            class="input-form "
            name="contact[{{ 'templates.contact.form.comment' | t }}]"
            placeholder="Example: I want to buy 6 chairs and a table brand Oda ottoman..."
          >
          {{- form.body -}}
        </textarea>
      </div>
      <div class="contact__button">
        <button type="submit" class="button">
          {{ 'templates.contact.form.send' | t }}
        </button>
      </div>
      <div class="text-end">
        <p >{{section.settings.text-end }}</p>
      </div>
      <div class="popup-recaptcha">
        <div
          class="g-recaptcha"
          data-sitekey="6LeF6YwqAAAAAN5i-KDEKqDsGCOMNOxuL5xVnguK"
        ></div>
        <button class="btn-recaptcha">Accept</button>
      </div>


    {%- endform -%}
    </div>
    </div>
</div>

{% schema %}
{
  "name": "t:sections.contact-form.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Contact us to order and receive purchase advice",
      "label": "t:sections.contact-form.settings.title.label"
    },
    {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#F6F3EE"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
    "type": "text",
    "id": "text-end",
    "label": "text end",
    "default":"* Required"
    }
  ],
  "presets": [
    {
      "name": "orangy-contact-form"
    }
  ]
}
{% endschema %}
